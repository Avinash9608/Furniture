{
  "name": "shyam-furnitures",
  "version": "1.0.0",
  "description": "Furniture shop website for Shyam Furnitures",
  "main": "index.js",
  "scripts": {
    "start": "node server.js",
    "server": "nodemon server.js",
    "client": "cd client && npm run dev",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "data:import": "node server/utils/seeder",
    "data:destroy": "node server/utils/seeder -d",
    "categories:seed": "node server/utils/seedCategories",
    "categories:update-slugs": "node server/utils/updateCategorySlugs",
    "install-all": "npm install && cd client && npm install",
    "build": "node build.js",
    "build:client": "cd client && npm run build",
    "render-build": "npm install --include=dev && node build.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "fix-slugs": "node server/scripts/fixSlugs.js",
    "fix-category-slugs": "node server/scripts/fixCategorySlugs.js"
  },
  "keywords": [
    "furniture",
    "ecommerce",
    "mern",
    "react",
    "node",
    "express",
    "mongodb"
  ],
  "author": "Shyam Furnitures",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cloudinary": "^1.37.0",
    "concurrently": "^8.0.1",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^4.21.2",
    "framer-motion": "^12.9.2",
    "jsonwebtoken": "^9.0.0",
    "mongoose": "^8.13.2",
    "multer": "^1.4.5-lts.1",
    "node-fetch": "^2.7.0",
    "path": "^0.12.7",
    "slugify": "^1.6.6",
    "sweetalert2": "^11.19.1",
    "swiper": "^11.2.6"
  }
}
